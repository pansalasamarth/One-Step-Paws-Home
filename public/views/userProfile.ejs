    <div class="hello"> 
    
    <div class="userinfo">
        <h1>User Info</h1>
        <img src="/assets/images/IMG-20240222-WA0015.jpg" alt="Your Image" class="rounded-image">
        <table>
            <tr>
                <td>
                    <label class="def" for="name">Name</label>
                </td>
                <td>
                    <label class="data" for="nameshow"><%= user_id.username %></label>
                    
                </td>  
            </tr>
            <tr>
                <td>
                    <label class="def" for="Email">Email</label>
                </td>
                    <td>

                        <label for="emailshow"class="data"><%= user_id.email %></label>
                    </td>
                    
                </tr>
                <tr>
                    <td>
                    
                        <label class="def" for="Phone ">Phone</label>
                    </td>
                    <td>

                        <label for="Phoneshow"class="data"><%= user_id.phone %></label>
                    </td>
                </tr>
            </table>
        </table>
    </div>

    <div class="serviceinfo">
        <h1>Requested Service</h1>
        <div class="table-responsive">
            <table class="table table-striped">
                <tr>
                <th scope="col">Service No.</th>
                <th scope="col">Client Name</th>
                <th scope="col">Client Email</th>
                <th scope="col">Client Phone no.</th>
                <th scope="col">Client Address</th>
                <th scope="col">Dog Breed</th>
                <th scope="col">Service</th>
                <th scope="col">Price</th>
              </tr>
              <tr>
            <% if(services) { %>
                <% services.forEach(element => { %>
                <th scope="row"><%= i++;%></th>
                <td><%= element.name %></td>
                <td><%= element.email %></td>
                <td><%= element.phone %></td>
                <td><%= element.address %></td>
                <td><%= element.breed %></td>
                <td><%= element.service %></td>
                <td><%= element.price %></td>
              </tr>
                <% }); %>
            <% } %>
            </table>
        </div>
    </div>
